<% include ../partials/header.ejs %>

<div class="ui container">
  <h1 id="toph1">List of all Receipts</h1>
  <div class="ui grid">
    <% receipt.forEach(function(receipt){ %>
    <div class="four wide column">
      <%if(receipt.approved){%>
      <h3 id="confirmed">Confirmed</h3>
      <%}else{%>
      <h3 id="notConfirmed" class="ui medium red label">Not Confirmed</h3>
      <%}%>

      <div class="ui segment">
        <div class="ui divided selection list">
          <a class="item">
            <div class="ui teal horizontal label">Created By</div>
            <%=receipt.author%>
          </a>
          <a class="item">
            <div class="ui teal horizontal label">Descripton</div>
            <%=receipt.desc%>
          </a>
          <a class="item">
            <div class="ui teal horizontal label">Company Used</div>
            <%=receipt.company%>
          </a>
          <a class="item">
            <div class="ui teal horizontal label">Amount of Money Used</div>
            <%=receipt.totalUsed%>kr</a
          >
        </div>
      </div>
      <div class="buttons">
      <a href="/receipts/<%=receipt._id%>">
      <button class="ui teal button">View</button></div>
      </a>
    </div>
    <%})%>
  </div>

  <% include ../partials/footer.ejs %>
</div>
